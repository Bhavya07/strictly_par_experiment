<h1>Listing studies</h1>

<table>
  <thead>
    <tr>
      <th>Degree</th>
      <th>Institution</th>
      <th>Year</th>
      <th>Score</th>
      <th>Sat</th>
      <th>Gpa</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @studies.each do |study| %>
      <tr>
        <td><%= study.degree %></td>
        <td><%= study.institution %></td>
        <td><%= study.year %></td>
        <td><%= study.score %></td>
        <td><%= study.SAT %></td>
        <td><%= study.GPA %></td>
        <td><%= link_to 'Show', study %></td>
        <td><%= link_to 'Edit', edit_study_path(study) %></td>
        <td><%= link_to 'Destroy', study, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

