<div class=" back_reg container-fluid  pad-clear" style="margin-top:45px;">
	 <div class="row">
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
     <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="hidden-xs col-sm-1 pad-clear">
    <%= image_tag("logo.png", :class=>"uni_logo_img img-responsive pull-left") %>
  </div>
      <div class="navbar-header navbar-left">
        <a class="navbar-brand">
         <div>
          <span class="hidden-xs">
            STRICTLY SCHOLARSHIP</span>
            <span class="visible-xs">
              Strictly Scholarship</span>

            </div>
          </a>
         
     </div><!-- /.container-fluid -->
   </nav>
 </div>  <!--row-->





	<div class="row">
			<div class="registration col-xs-12 col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3 ">
				<h1 class="col-xs-12" style="background-color:rgba(186,169,29,0.8);;border-radius:5px;text-align:center; padding:30px; border-bottom:1px solid; border-color:black;color:black;">
					<span class="hidden-xs">
		            UNIVERSITY REGISTRATION</span>
		            <span class="visible-xs">
		              University Registration</span></h1>	

                  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

		 <div class="col-xs-12 " style="margin-top:30px;"><!--EMAIL ID-->
          <div class="col-xs-4 col-md-4 pull-left"  >
              <div style="padding:10px;">
                <span class="hidden-xs">EMAIL ID:</span>
                <span class="visible-xs">Email ID:</span>
              </div>
          </div>
          <div class="col-xs-7 col-md-7 col-xs-offset-1 pull-right">
            <%= f.email_field :email, :placeholder=>"EMAIL ID", :class=>"form-control ", :required=>"required",:autofocus => true%>
          </div>  
        </div>

        <div class="col-xs-12 "><!--PASSWORD-->
          <div class="col-xs-4 col-md-4 pull-left" >
              <div style="padding:10px;">
                 <span class="hidden-xs">PASSWORD:</span>
                <span class="visible-xs">Password:</span>
              </div>
          </div>
          <div class="col-xs-7 col-md-7 col-xs-offset-1">
            <%= f.password_field :password, :placeholder=>"PASSWORD", :class=>"form-control ", :required=>"required"%>
          </div>  
        </div>

         <div class="col-xs-12 "><!--CONFIRM PASSWORD-->
          <div class="col-xs-4 col-md-4 pull-left" >
              <div style="padding:10px;">
                <span class="hidden-xs">CONFIRM PASSWORD:</span>
                <span class="visible-xs">Confirm Password:</span>
              </div>
          </div>
          <div class="col-xs-7 col-md-7 col-xs-offset-1">
            <%= f.password_field :password_confirmation, :placeholder=>"CONFIRM PASSWORD", :class=>"form-control ", :required=>"required"%>
          </div>  
        </div>
          
          <div class="col-xs-12 col-md-2 col-xs-offset-4 col-md-offset-4" style="padding:30px;">
          <%= f.submit  "Submit", :class=>"button"%>
          </div> 
	   </div> 
        <% end %>

 	</div>
 	<p>
 		Already have an account?  
          <%= render "universities/shared/links" %>     </p>

</div>